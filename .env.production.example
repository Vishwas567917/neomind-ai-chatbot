# Production Environment Configuration
# Copy this to .env.local for production deployment

# Authentication Secret (Generate with: openssl rand -base64 32)
AUTH_SECRET=your-production-secret-here

# Database Configuration
POSTGRES_URL=postgresql://username:password@host:port/database
# Alternative for connection pooling:
# POSTGRES_URL=postgres://username:password@host:port/database?pgbouncer=true&connection_limit=1

# AI API Keys (Choose one or more)
XAI_API_KEY=xai-your-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# Storage Configuration
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token-here
REDIS_URL=redis://username:password@host:port

# Environment
NODE_ENV=production

# Optional: Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-public-analytics-id

# Optional: Custom Domain Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret

# Security Headers
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Rate Limiting (optional)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Logging Level
LOG_LEVEL=info